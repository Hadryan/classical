<div class="classical_form">
  <fieldset class="field_form">
    <legend>Composer Details</legend>
    
    <% form_for( composer ) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :nationality %>
        <%= f.text_field :nationality %>
        <%= f.country_select :nationality , ["United States"]%>
      </p>
      <p>
        <%= f.label :birthDate %>
        <%= f.date_select :birthDate, :start_year => 1750, :end_year => 1850 %>
      </p>
      <p>
        <%= f.label :deathDate %>
        <%= f.date_select :deathDate, :start_year => 1750, :end_year => 1850 %>
      </p>
      <p>
        <%= f.submit button_label %>
      </p>
    <% end %>
  </fieldset>
</div>
<%= link_to 'Back', composers_path %>