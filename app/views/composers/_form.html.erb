<div class="classical_form">
  <fieldset class="field_form">
    <legend>Composer Details</legend>
    
    <% form_for( composer ) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </p>
	  <p>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </p>
      <p>
        <%= f.label :nationality %>
        <%= f.text_field :nationality %>
      </p>
      <p>
        <%= f.submit button_label %>
      </p>
    <% end %>
  </fieldset>
</div>
<%= link_to 'Back', composers_path %>