.form
  %h2= t :obra_type
  = form_for( obra_type ) do |f|
    = errors_for obra_type
    .form_row
      = f.label :name
      = f.text_field :name, :class => :text

    .form_row
      = f.label :description
      = f.text_area :description, :class => :text

    .form_row_submit
      = f.submit :class => 'button'

= link_to t(:back), obra_types_path

