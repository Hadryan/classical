= title 'Home'

%h1
  Welcome!

- if current_user
  %p
    You are logged in as
    = current_user.email
  %p
    = link_to  'Logout', destroy_user_session_path, :id => 'link_logout'
- else
  %h2
    You are currently not logged in.
  %p
    = link_to  'Login', new_user_session_path, :id => 'link_login'
    or
    = link_to  'Join Now', new_user_registration_path, :id => 'link_join'

