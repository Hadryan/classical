<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />

    <%= stylesheet_link_tag "style", "classical", "jquery-ui" , :media => "all" %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>

    <title>Classical - <%= (yield :title) || 'Classical'	%></title>
  </head>
  <body>
    <div id="header">
    	<div class="center_wrapper">

		    <div id="toplinks">
			    <div id="toplinks_inner">
            <%- if current_user %>
              <%= link_to current_user.email, edit_user_registration_path(current_user) %>
              |
              <%= link_to t('.logout'), destroy_user_session_path %>
            <% else %>
              <%= link_to t('.login'), new_user_session_path %>
              |
              <%= link_to t('.signup'), new_user_registration_path %>
            <% end %>
			    </div>
    		</div>
	    	<div class="clearer">&nbsp;</div>

	    	<div id="site_title">
	    		<h1><%= link_to 'Classical', root_path, :id => 'link_home' %></h1>
	    		<p>Your music library on the web</p>
	    	</div>
    	</div>
	  </div>
    <!-- End Header -->

    <!-- Begin Navigation -->
    <%- if current_user %>
    <div id="navigation">
    	<div class="center_wrapper">

        <%= render :partial => 'layouts/menu' %>

  		  <div class="clearer">&nbsp;</div>
    	</div>
	  </div>
	  <% end %>

    <!-- End Navigation -->
    <div id="main_wrapper_outer">
	    <div id="main_wrapper_inner">
		    <div class="center_wrapper">
          <% flash.each do |key, msg| %>
            <div class="<%= key %>">
              <%= msg %>
            </div>
          <% end -%>
    			<div class="left" id="main">
    				<div id="main_content">
      		    <%= yield %>
            </div>
          </div>
	    		<div class="clearer">&nbsp;</div>
        </div>
      </div>
    </div>

    <div id="footer">
	    <div class="center_wrapper">

		    <div class="left">
          &copy; <%= Time.now.year %>
		    </div>
		    <div class="right">
		    </div>

		    <div class="clearer">&nbsp;</div>

	    </div>
    </div>
  </body>
</html>

