%tr
  %td= link_to user_album.album.name, user_album, :id => 'link_to_data'

  - unless @section == 'composers'
    %td= link_to(user_album.album.composer.name, user_album.album.composer, :id => 'link_to_data')

  - unless @section == 'obra_types'
    %td= link_to user_album.album.obra_type.to_s, user_album.album.obra_type, :id => 'link_to_data'

  - unless @section == 'orchestras'
    %td= link_to user_album.album.orchestra.to_s, user_album.album.orchestra, :id => 'link_to_data'

  - unless @section == 'directors'
    %td= link_to user_album.album.director.to_s, user_album.album.director, :id => 'link_to_data'

  - unless @section == 'solists'
    %td= link_to user_album.album.solist.to_s, user_album.album.solist, :id => 'link_to_data'

  %td= user_album.album.opus_number
  %td= user_album.cd_number

