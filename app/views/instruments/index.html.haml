= title t :instruments

%h1
  = t :instruments

= link_to "#{t :new}", :new_instrument

- form_tag do
  %p
    = t :search
    = text_field_tag :search_field
    = image_tag 'spinner.gif', :id => 'spinner', :style => 'display: none'

#results
  = render :partial => @instruments

= will_paginate @instruments

= link_to "Home", :controller => :home
= observe_field 'search_field', :url => {:action => 'instruments_completion'}, :frequency => 1, :before => "Element.show('spinner')", :complete => [ visual_effect(:highlight, :results), "Element.hide('spinner')"], :update => :results, :with => 'prefix'

