= title t :directors

%h1
  = t :directors

= link_to "#{t :new}", :new_director

- form_tag do
  %p
  = t :search
  = text_field_tag :search_field
  = image_tag 'spinner.gif', :id => 'spinner', :style => 'display: none'

%br

#results
  = render :partial => 'result', :collection => @directors

%br

= link_to "Home", :controller => :home
= observe_field 'search_field', :url => {:action => 'directors_completion'}, :frequency => 1, :before => "Element.show('spinner')", :complete => [ visual_effect(:highlight, :results), "Element.hide('spinner')"], :update => :results, :with => 'prefix'

