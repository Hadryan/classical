<h1>Album</h1>
<p>
  <b>Composer:</b>
  <%=h @album.composer.full_name if @album.composer %>
</p>
<p>
  <b>Obra Type:</b>
  <%=h @album.obra_type.name if @album.obra_type %>
</p>
<p>
  <b>Name:</b>
  <%=h @album.name %>
</p>
<p>
  <b>Music Tone:</b>
  <%=h @album.music_tone %>
</p>
<p>
  <b>Obra Number:</b>
  <%=h @album.number %>
</p>
<p>
  <b>Opus Number:</b>
  <%=h @album.opus_number %>
</p>
<p>
  <b>Instrument:</b>
  <% @album.instruments.each do | instrument | %>
    <%=h instrument.name %>
  <% end %>
</p>
<p>
  <b>Solist:</b>
  <%=h @album.solist.name if @album.solist %>
</p>
<p>
  <b>Director:</b>
  <%=h @album.director.name if @album.director %>
</p>
<p>
  <b>Orchestra:</b>
  <%=h @album.orchestra.name if @album.orchestra %>
</p>
<p>
  <b>Cd Number:</b>
  <%=h @album.cd_number %>
</p>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>

