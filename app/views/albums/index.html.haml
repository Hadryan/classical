= title t(:albums)

%h1= t :albums

= link_to "#{t :new}", :new_album

= form_tag albums_path, :method => :get do
  %p
    = t :search
    = text_field_tag :query, @query
    = select_tag :type, options_for_select([['director', 'director'], ['solista', 'solist'], ['orquesta', 'orchestra'], ['compositor', 'composer']], @type)
    = submit_tag 'Buscar'


= will_paginate @albums, :previous_label => t('previous'), :next_label => t('next') if @albums.respond_to? 'total_pages'

%table.data_table
  = render :partial => 'album_headers'
  %tbody#results= render :partial => @albums

= will_paginate @albums, :previous_label => t('previous'), :next_label => t('next') if @albums.respond_to? 'total_pages'

