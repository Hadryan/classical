= title t :albums

%h1
  Albums

= link_to "#{t :new}", :new_album

- form_tag  do
  %p
    = t :search
    = text_field_tag :search_field
    = image_tag 'spinner.gif', :id => 'spinner', :style => 'display: none'

#results
  = render :partial => "album_headers"
  = render :partial => @albums

= will_paginate @albums

= link_to t('.home'), :controller => :home
= observe_field 'search_field', :url => { :action => 'albums_completion' }, :frequency => 1, :before => "Element.show('spinner')", :complete => [ visual_effect(:highlight, :results), "Element.hide('spinner')" ], :update => :results, :with => 'prefix'

