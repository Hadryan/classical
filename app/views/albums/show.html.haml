.cover_art
  = image_tag @album.image.attachment.url(:thumb) if @album.image

%p
  %b
    Composer:
  = link_to @album.composer.name, @album.composer if @album.composer
%p
  %b
    Obra Type:
  = link_to @album.obra_type.name, @album.obra_type if @album.obra_type
%p
  %b
    Name:
  = @album.name
%p
  %b
    Music Tone:
  = @album.music_tone
%p
  %b
    Obra Number:
  = @album.number
%p
  %b
    Opus Number:
  = @album.opus_number
%p
  %b
    Instrument:
  = link_to @album.instrument.name, @album.instrument if @album.instrument

%p
  %b
    Solist:
  = link_to @album.solist.name, @album.solist if @album.solist
%p
  %b
    Director:
  = link_to @album.director.name, @album.director if @album.director
%p
  %b
    Orchestra:
  = link_to @album.orchestra.name, @album.orchestra if @album.orchestra
%p
  %b
    Cd Number:
  = h @album.cd_number

= link_to t(:edit), edit_album_path(@album)
|
= link_to t(:back), albums_path

