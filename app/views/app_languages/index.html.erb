<h1>Listing languages</h1>

<table>
  <tr>
    <th>Locale</th>
    <th>Name</th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%=h language.locale_name %></td>
    <td><%=h language.name %></td>
    <td><%= link_to 'Show', language %></td>
    <td><%= link_to 'Edit', edit_app_language_path(language) %></td>
    <td><%= link_to 'Destroy', language, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New languages', new_app_language_path %>
