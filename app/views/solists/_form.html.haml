.form
  %h2= t :solist
  = form_for solist do |f|
    = errors_for solist
    .field
      = f.label :name
      = f.text_field :name, :class => :text

    .field
      = f.label :description
      = f.text_area :description, :class => :text

    .field
      = f.submit button_label

= link_to t(:back), solists_path

