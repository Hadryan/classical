.form
  %h2= t :solist
  = form_for solist do |f|
    = errors_for solist
    .form_row
      = f.label :name
      = f.text_field :name, :class => :text

    .form_row
      = f.label :description
      = f.text_area :description, :class => :text

    .form_row_submit
      = f.submit button_label, :class => 'button'

= link_to t(:back), solists_path

