<div class="classical_form">
  <h2>Solist</h2>
  <% form_for( solist ) do |f| %>
    <%= f.error_messages %>

    <div class='form_element'>
      <%= f.label :description %>
      <%= f.text_field :name, :class => :text %>
    </div>
    <p>
      <%= f.submit button_label %>
    </p>
  <% end %>
</div>

<%= link_to 'Back', solists_path %>

