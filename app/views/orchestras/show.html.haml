= title @orchestra.name

.composer-profile
  .image
    = image_tag(@orchestra.image.attachment.url(:small)) if @orchestra.image
  .description
    %h1= @orchestra.name

= link_to t(:edit), edit_orchestra_path(@orchestra)
|
= link_to t(:back), orchestras_path

#tabs
  %ul
    %li
      %a{:href => "#user-albums"}= "My albums (#{@user_albums.size})"
    %li
      %a{:href => "#albums"}= "Albums (#{@albums.size})"
    %li
      %a{:href => "#description"}= t('description')
    %li
      %a{:href => "#discussions"}= "Discussions (#{@orchestra.discussions.size})"

  #user-albums
    = will_paginate @user_albums, :previous_label => t('previous'), :next_label => t('next') if @user_albums.respond_to? 'total_pages'

    %table.data_table
      = render :partial => 'user_albums/album_headers'
      = render :partial => @user_albums

    = will_paginate @user_albums, :previous_label => t('previous'), :next_label => t('next') if @user_albums.respond_to? 'total_pages'
    .clear

  #albums
    = will_paginate @albums, :previous_label => t('previous'), :next_label => t('next') if @albums.respond_to? 'total_pages'

    %table.data_table
      = render :partial => 'albums/album_headers'
      = render :partial => @albums

    = will_paginate @albums, :previous_label => t('previous'), :next_label => t('next') if @albums.respond_to? 'total_pages'
    .clear

  #description
    = @orchestra.description

  #discussions
    = render :partial => 'discussions/form', :locals => {:discussable => @orchestra}
    = render :partial => @orchestra.discussions

:javascript
  $(function() {
  $("#tabs").tabs();
  });

